<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="name">quicktask</attribute>
		<attribute name="onsubmit">return false</attribute>
		<attribute name="class">formQuicktask</attribute>
	</attributes>

	<fieldsets>
		<fieldset name="main">
			<legend>Left form column</legend>
			<elements>

				<field type="textinput" name="title">
					<label>core.title</label>
					<required />
				</field>

				<field type="textinputAC" name="id_project">
					<label>project.project</label>
					<config>
						<acListener>
							<ext>project</ext>
							<controller>project</controller>
							<action>autocompletion</action>
						</acListener>
						<acLabelField>title</acLabelField>
					</config>
					<required />
				</field>

				<field type="RTE" name="description">
					<label>core.description</label>
					<tinymce>
						<theme>simple</theme>
						<width>240px</width>
						<height>80px</height>
					</tinymce>
				</field>

				<field type="select" name="id_worktype">
					<label>task.attr.worktype</label>
					<source type="sql">
						<fields>id,title</fields>
						<tables>ext_project_worktype</tables>
						<where>deleted = 0</where>
						<order>title</order>
						<label>title</label>
						<value>id</value>
					</source>
					<required />
				</field>

				<field type="checkbox" name="start_tracking">
					<label>timetracking.start</label>
					<default>1</default>
					<onchange>Todoyu.Ext.project.QuickTask.preventStartDone('start', this)</onchange>
				</field>

				<field type="checkbox" name="task_done">
					<label>task.taskDone</label>
					<onchange>Todoyu.Ext.project.QuickTask.preventStartDone('done', this)</onchange>
				</field>

			</elements>
		</fieldset>

		<fieldset name="buttons">
			<legend>Actions</legend>
			<class>buttons</class>
			<elements>
				<field type="saveButton" name="save">
					<onclick>Todoyu.Ext.project.QuickTask.save(this.form)</onclick>
				</field>
				<field type="cancelButton" name="cancel">
					<onclick>Todoyu.Ext.project.QuickTask.closePopup()</onclick>
				</field>
			</elements>
		</fieldset>
	</fieldsets>
</form>