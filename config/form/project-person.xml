<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldsets>

		<fieldset>
			<legend>Top</legend>
			<class>top</class>
			<elements>
				
				<field type="textinputAC" name="id_person">
					<label>contact.person</label>
					<config>
						<acListener>
							<ext>project</ext>
							<controller>autocomplete</controller>
							<action>person</action>
						</acListener>
						<acLabelFunc>TodoyuPersonManager::getLabel</acLabelFunc>
						<options>
							<onCompleteCustom>Todoyu.Ext.project.Project.Edit.onPersonAutocomplete</onCompleteCustom>
						</options>
					</config>
					<wizard>
						<htmlClass>createNewPerson</htmlClass>
						<ext>contact</ext>
						<controller>person</controller>
						<action>addNewContactWizard</action>
						<title>LLL:contact.contact.createnew</title>
						<width>700</width>
						<displayCondition></displayCondition>
						<restrict>
							<allow ext="contact" right="contact:modify"></allow>
						</restrict>
					</wizard>
					<required />
				</field>
				
				<field type="select" name="id_role">
					<label>project.attr.persons.role</label>
					<source type="function">
						<function>TodoyuProjectViewHelper::getProjectroleOptions</function>
					</source>
				</field>
				
				<field type="textinput" name="comment">
					<label>project.attr.persons.comment</label>
				</field>
				
			</elements>
		</fieldset>

	</fieldsets>
</form>