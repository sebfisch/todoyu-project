<div id="task-{$task.id}" class="task {$task.class} {if $isExpanded}expanded{/if}">	<h3 id="task-{$task.id}-header" class="contextmenutask" name="task-{$task.id}">{if $hasSubtasks}		<a id="task-{$task.id}-subtasks-trigger" onclick="Todoyu.Ext.project.TaskTree.toggleSubtasks({$task.id})" href="javascript:void(0)" class="expandable {if $areSubtasksVisible}expanded{/if}"></a>{/if}		<span class="headLabel bcStatus{$task.status}" title="{$task.fulltitle}">			<span class="taskDate date" title="{Label core.deadline}: {date_format $task.date_deadline "%d.%m.%y"} / {Label core.start}: {date_format $task.date_start "%d.%m.%y"}">				{date_format $task.date_deadline "%d.%m.%y"}			</span>			<span class="projectName" title="{Label task.task}: {htmlencode $task.title}  (ID: {$task.id})">				<a href="javascript:void(0)" onclick="Todoyu.Ext.project.Task.toggleDetails({$task.id})" class="title">{htmlencode $task.title|truncate:80}</a>			</span>			<span title="{Label task.taskno}: {$task.id_project}.{$task.tasknumber}" class="taskNumber">{$task.id_project}.{$task.tasknumber}</span>{if $infoIcons}			<span class="infoIcons">	{foreach $infoIcons infoIcon}				<span id="{$infoIcon.id}" class="{$infoIcon.class}" title="{Label $infoIcon.label true}" {if $infoIcon.onclick}onclick="{$infoIcon.onclick}"{/if}></span>	{/foreach}			</span>{/if}		</span>{if count($additionalIcons) > 0}		<span class="additionalStuff">	{foreach $additionalIcons icon}			<span class="{$icon.class}" title="{$icon.label}"></span>	{/foreach}		</span>{/if}		<div class="clear"><!-- --></div>	</h3>	{$details}</div>{$subtasks}