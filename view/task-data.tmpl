<div class="left description">
	{substituteLinkableElements(cleanHtml($description))}
</div>
<div class="right properties">
	<dl>
	{foreach $data info}
		{$info.wrap.0}
		<dt{if $info.className} class="{$info.className}"{/if}>{Label $info.label}</dt>
		<dd{if $info.id} id="{$info.id}"{/if}{if $info.className} class="{$info.className}"{/if}{if $info.title} title="{$info.title}"{/if}>
			{if $info.className}<span class="icon"></span>{/if}
			{if $info.value}
				{$info.value}
			{else}
				&#8203;
			{/if}
		</dd>
		{$info.wrap.1}
	{/foreach}
	</dl>
</div>