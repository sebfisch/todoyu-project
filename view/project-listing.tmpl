<div class="projectlist" id="projectlist">

{* ---------- Header with column titles ---------- *}
	<h1 class="headerLine">
		<span class="first fulltitle">{Label portal.tasktree.header.customer} - {Label project.project}</span>
		<span class="projectNumber">{Label portal.tasktree.header.tasknumber}</span>
		<span class="rgt"><!-- right --></span>
	</h1>

{* ---------- The actual list of tasks ---------- *}
	<div class="projects">
		{foreach $projects projectHTML}
			{$projectHTML}
		{else}
			{contentMessage 'portal.selection.noProjectsFound'}
		{/foreach}
	</div>
</div>
<script type="text/javascript">
{$javascript}
</script>