<?xml version="1.0" encoding="utf-8"?>
<form>
	<attributes>
		<attribute name="name">projectusers</attribute>
	</attributes>
	<hiddenFields>
		<field name="id" />
	</hiddenFields>
	<fieldsets>

		<fieldset>
			<legend>Top</legend>
			<class>top</class>
			<elements>
				<field type="textinputAC" name="id_user">
					<label>user.customer.attr.customer-user.person</label>
					<config>
						<acListener>
							<ext>project</ext>
							<controller>autocomplete</controller>
							<action>user</action>
						</acListener>
						<acLabelFunc>TodoyuUserManager::getLabel</acLabelFunc>
						<options>
							<onCompleteCustom>Todoyu.Ext.project.Edit.onUserAutocomplete</onCompleteCustom>
						</options>
					</config>
					<wizard>
						<htmlClass>createNewUser</htmlClass>
						<ext>contact</ext>
						<controller>person</controller>
						<action>addNewContactWizard</action>
						<title>LLL:contact.contact.createnew</title>
						<width>700</width>
						<displayCondition></displayCondition>
					</wizard>
					<required>1</required>
				</field>
				<field type="select" name="id_userrole">
					<label>project.user.role</label>
					<source type="function">
						<function>TodoyuProjectDataSource::getProjectUserRoleOptions</function>
					</source>
				</field>
				<field type="textinput" name="comment">
					<label>project.user.comment</label>
				</field>
			</elements>
		</fieldset>

	</fieldsets>
</form>