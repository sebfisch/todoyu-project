<div class="projectlist">

{* ---------- Header with column titles ---------- *}
	<h1 class="headerLine">
		<span class="first customer">{Label portal.tasktree.header.customer}</span>
		<span class="projectName">{Label project.project} - {Label task.task}</span>
		<span class="taskNumber">{Label portal.tasktree.header.tasknumber}</span>
		<span class="rgt"><!-- right --></span>
	</h1>

{* ---------- The actual list of tasks ---------- *}
	<div class="projects">
		{foreach $projects projectHTML}
			{$projectHTML}
		{else}
			<p class="contentMessage">{Label project.portal.selection.noProjectsFound}</p>
		{/foreach}
	</div>
</div>
<script type="text/javascript">
{$javascript}
</script>