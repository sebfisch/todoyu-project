<div class="left description">
	{substituteLinkableElements(cleanHtml($description))}
</div>
<div class="right properties">
	<dl>
	{foreach $data info}
		{$info.wrap.0}
		<dt class="{$info.className}">{Label $info.label}</dt>
		<dd {if $info.id}id="{$info.id}" {/if}class="{$info.className}"{if $info.title} title="{$info.title}{/if}">
			{$info.value}&#8203;
		</dd>
		{$info.wrap.1}
	{/foreach}
	</dl>
</div>