<div id="project-{$project.id}" class="project">
	<h3 id="project-{$project.id}-header" class="contextmenuproject" onclick="Todoyu.Ext.project.Project.toggleDetails({$project.id})">
		<span class="headLabel bcStatus{$project.status}">&nbsp;</span>
		<span class="projectName">
			{htmlencode $project.fulltitle|truncate:111}
		</span>
		<span class="projectNumber">
			{$project.id}
		</span>
	</h3>

{if canSeeProjectDetails($project.id)}
	<div id="project-{$project.id}-details"{if ! $details} style="display:none"{/if}>
		{$details}
	</div>
{/if}

</div>