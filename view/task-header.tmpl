<div id="task-{$task.id}" class="task {$task.class} {if $isExpanded}expanded{/if}" >
	<h3 id="task-{$task.id}-header" class="contextmenutask" name="task-{$task.id}">
		<a id="task-{$task.id}-subtasks-trigger" onclick="Todoyu.Ext.project.TaskTree.toggleSubtasks({$task.id})" href="javascript:void(0)" class="{if $hasSubtasks}expandable{/if} {if $areSubtasksVisible}expanded{/if}"></a>

		<div class="headLabel bcStatus{$task.status}" title="{$task.fulltitle}">
			<div class="taskDate date" title="{Label core.deadline}: {dateFormat $task.date_deadline D2M2Y2} / {Label core.start}: {dateFormat $task.date_start D2M2Y2}">
				{dateFormat $task.date_deadline D2M2Y2}
			</div>
			<div class="projectName" title="{Label task.task}: {htmlencode $task.title}  (ID: {$task.id})">
				<a href="javascript:void(0)" onclick="Todoyu.Ext.project.Task.toggleDetails({$task.id})" class="title">{htmlencode $task.title|truncate:80}</a>
			</div>
		</div>

		<div class="taskHeadExtras">
			{foreach $taskHeaderExtras headerExtra}
				<div id="task-{$task.id}-headerextra-{$headerExtra.key}" class="{$headerExtra.key}">
					{$headerExtra.content}
				</div>
			{/foreach}
		</div>

		<div class="taskNumber" title="{Label project.taskno}: {$task.id_project}.{$task.tasknumber}">
			{$task.id_project}.{$task.tasknumber}
		</div>

		<div class="taskIcons">
			{foreach $taskIcons taskIcon}
				<span id="{$taskIcon.id}" class="{$taskIcon.class}" title="{Label $taskIcon.label true}" {if $taskIcon.onclick}onclick="{$taskIcon.onclick}"{/if}></span>
			{/foreach}
		</div>

		<div class="clear"><!-- --></div>
	</h3>
	{$details}
</div>
{$subtasks}