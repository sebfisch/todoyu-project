<?xml version="1.0" encoding="UTF-8"?>
<form>

	<fieldsets>
		<fieldset name="main">
			<legend>Select project</legend>
			<elements>

				<field type="textinputAC" name="id_project_ac">
					<label>project.project</label>
					<config>
						<acListener>
							<ext>project</ext>
							<controller>autocomplete</controller>
							<action>project</action>
						</acListener>
						<acLabelField>title</acLabelField>
						<acLabelFunc>TodoyuProjectViewHelper::getQuicktaskAutocompleteLabel</acLabelFunc>
						<options>
							<onCompleteCustom>Todoyu.Ext.project.Task.Edit.onProjectAutocomplete</onCompleteCustom>
						</options>
					</config>
					<required />
				</field>

				<field type="select" name="id_project_select">
					<label>project.project</label>
					<source type="function">
						<function>TodoyuProjectViewHelper::getAvailableProjectOptions</function>
					</source>
					<noPleaseSelect />
					<required />
				</field>

			</elements>
		</fieldset>
	</fieldsets>
</form>