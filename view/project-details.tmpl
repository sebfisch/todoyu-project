<div id="project-{$id}-data" class="data">
	
	<div class="infoBox properties">
		<h4>{Label project.properties}</h4>
		<div class="content overflow">
			<dl>
			{foreach $properties info}
				<dt>{Label $info.label true}</dt>
				<dd>{$info.value}</dd>
			{/foreach}
			</dl>
		</div>
	</div>
	
	<div class="infoBox">
		<h4>{Label project.attr.persons}</h4>
		<div class="content overflow">{$assignedPersons}</div>
	</div>

	<div class="infoBox description">
		<h4>{Label core.description}</h4>
		<div class="content overflow">{cleanHtml $description}</div>
	</div>
	
	{* Here we add dynamic elements later *}

</div>