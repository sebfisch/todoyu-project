<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldsets>

		<fieldset name="projectmembers">
			<legend>Top</legend>
			<class>top</class>
			<elements>

				<field type="textinputAC" name="id">
					<label>contact.person</label>
					<config>
						<acName>projectperson</acName>
						<acLabel>TodoyuPersonManager::getLabel</acLabel>
						<options>
							<onCompleteCustom>Todoyu.Ext.project.Project.Edit.onPersonAutocomplete</onCompleteCustom>
						</options>
					</config>
					<wizard>
						<htmlClass>createNewPerson</htmlClass>
						<ext>contact</ext>
						<controller>person</controller>
						<action>addNewContactWizard</action>
						<title>LLL:contact.create.person.label</title>
						<width>700</width>
						<displayCondition />
						<restrict>
							<allow ext="contact" right="contact:modify" />
						</restrict>
					</wizard>
					<required />
				</field>

				<field type="select" name="id_role">
					<label>project.attr.persons.role</label>
					<source type="function">
						<function>TodoyuProjectViewHelper::getProjectroleOptions</function>
					</source>
					<required />
				</field>

				<field type="textinput" name="comment">
					<label>project.attr.persons.comment</label>
				</field>

				<field type="checkbox" name="is_public">
					<label>project.attr.persons.is_public</label>
				</field>

			</elements>
		</fieldset>

	</fieldsets>
</form>