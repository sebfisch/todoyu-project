<?xml version="1.0" encoding="UTF-8"?>
<form>

	<fieldsets>
		<fieldset name="main">
			<legend>Select project</legend>
			<elements>

				<field type="textAC" name="id_project_ac">
					<label>project.project</label>
					<config>
						<acName>project</acName>
						<acLabel>TodoyuProjectViewHelper::getQuicktaskAutocompleteLabel</acLabel>
						<options>
							<onCompleteCustom>Todoyu.Ext.project.Task.Edit.onProjectAutocomplete</onCompleteCustom>
						</options>
					</config>
					<required />
				</field>

				<field type="select" name="id_project_select">
					<label>project.project</label>
					<source type="function">
						<function>TodoyuProjectViewHelper::getAvailableProjectOptions</function>
					</source>
					<noPleaseSelect />
					<required />
				</field>

			</elements>
		</fieldset>
	</fieldsets>
</form>